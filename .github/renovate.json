{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependency update"],
  "packageRules": [
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["*"]
    },
    {
      "groupName": "openshift-assisted dependencies",
      "enabled": false,
      "matchPackageNames": ["/^@openshift-assisted/"]
    },
    {
      "groupName": "patternfly packages",
      "matchPackageNames": ["@patternfly/**"]
    }
  ],
  "ignorePaths": ["babel-plugins/**"],
  "ignoreDeps": ["monaco-editor", "react-monaco-editor", "@types/react"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 0,
  "reviewersFromCodeOwners": true,
  "tekton": {
    "schedule": ["at any time"]
  }
}
